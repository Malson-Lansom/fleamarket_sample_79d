= render 'layouts/header'  
.wrapper
  .showMain
    .itemBox
      .itemBox__title
        %span
          = @product.pname
      .itemBox__image
        .itemBox__image__top
          .img1
        %ul.itemBox__image__bottom
          %li.img-left
            -# = @product.images[0].image
          %li.img-right
            -# = @product.images[0].image
      .itemBox__price
        ¥
        = @product.price
      .itemBox__tax
        %span (税込) 送料込み
      .itemBox__detail
        = @product.explanation
      .itemBox__table
        %table
          %tr
            %th 出品者
            %td
              = @product.user.nickname
              = link_to '#'
          %tr
            %th カテゴリー
            %td
              = @product.category.parent.parent.name
              %br/
              = @product.category.parent.name
              %br/
              = @product.category.name
              -# = link_to @product.category.name, category_path(@product.category_id), method: :get

              
          %tr
            %th ブランド
            %td
              = @product.brand
          %tr
            %th 商品のサイズ
            %td
              = @product.size_id
          %tr
            %th 商品の状態
            %td
              = @product.status
          %tr
            %th 配送料の負担
            %td
              = @product.deliver
          %tr
            %th 発送元の地域
            %td
              = @product.prefecture
          %tr
            %th 発送日の目安
            %td
              = @product.shipping_dates
      .itemBox__optionalArea
        .favoriteBtn
          = icon('fas', 'star')
          お気に入り 0
        .reportBtn
          = icon('fas', 'flag')
          = link_to '不適切な商品の通報', '#'
    .productRevisedInfo
      - if user_signed_in? && current_user.id == @product.user_id
        .productRevisedInfo__delete
          = link_to "商品の削除", product_path(@product.id),
      method: :delete
        .productRevisedInfo__edit
          = link_to "商品の修正", edit_product_path(@product.id)
      - else
        .productRevisedInfo__buy
          = link_to "購入画面に進む"
    .commentBox
      .commentBox__contents
        .textarea
          %textarea
        .note
          %p
          相手のことを考え丁寧なコメントを心がけましょう。
          %br
          不快な言葉遣いなどは利用制限や退会処分となることがあります。
        .form
          %input.form__submit{type: 'submit', value: 'コメントする'}
          = icon('fas', 'comment')
    .links
      .front-back
        = link_to '< 前の商品', '#'
      .front-back
        = link_to '後ろの商品 >', '#'
    .mottoLook
      .mottoLook__link
        = link_to 'もっと見る', '#'
      .mottoLook2
        - @products.each do |product|
          - if product.shipping_status.present?
            = link_to '#' do
              .mottoSold
                .mottoSold__in
                  SOLD
              .img-link
                = product.images[0].image
              .productList
                .name
                  = product.pname
                .center
                  .price
                    = product.price
                  .ster
                    = icon('fas', 'star')
                    0
                .tax (税込)
          - else
            = link_to '#' do
              .img-link
                = product.images[0].image
              .productList
                .name
                  = product.pname
                .center
                  .price
                    = product.price
                  .ster
                    = icon('fas', 'star')
                    0
                .tax (税込)

.post__footer
  = render partial: 'layouts/footer'