= render 'layouts/header'  
.wrapper
  .showMain
    .itemBox
      .itemBox__title
        = @product.pname
      .itemBox__image
        - if @product.shipping_status.present?
          .topSold
            .topSold__in
              SOLD
          .itemBox__image__top
            .img1
              = image_tag @product.images[0].image.url
        - else
          .itemBox__image__top
            .img1
              = image_tag @product.images[0].image.url
      .itemBox__image__bottom
        .img2-5
          - @product.images[1..4].each do |img|
            = image_tag img.image.url
      .itemBox__price
        ¥
        = @product.price
      .itemBox__tax
        %span (税込) 送料込み
      .itemBox__detail
        = @product.explanation
      .itemBox__table
        %table
          %tr
            %th 出品者
            %td
              = @product.user.nickname
          %tr
            %th カテゴリー
            %td
              = @product.category.parent.parent.name
              %br/
              = @product.category.parent.name
              %br/
              = @product.category.name
          %tr
            %th ブランド
            %td
              = @product.brand
          %tr
            %th 商品のサイズ
            %td
              = @product.size_id
          %tr
            %th 商品の状態
            %td
              = @product.status
          %tr
            %th 配送料の負担
            %td
              = @product.deliver
          %tr
            %th 発送元の地域
            %td
              = @product.prefecture
          %tr
            %th 発送日の目安
            %td
              = @product.shipping_dates
      .itemBox__optionalArea
        .favoriteBtn
          = icon('fas', 'star')
          お気に入り 0
        .reportBtn
          = icon('fas', 'flag')
          = link_to '不適切な商品の通報', '#'
    .productRevisedInfo
      - if user_signed_in? && current_user.id == @product.user_id
        = link_to product_path(@product.id), class: 'productRevisedInfo__delete', method: :delete do
          商品の削除
        = link_to edit_product_path(@product.id), class: 'productRevisedInfo__edit' do
          商品の修正
      - elsif user_signed_in?
        = link_to product_buyers_path(@product.id), class: 'productRevisedInfo__buy' do
          購入画面に進む
      - else
    .commentBox
      .commentBox__contents
        .textarea
          %textarea
        .note
          %p
          相手のことを考え丁寧なコメントを心がけましょう。
          %br
          不快な言葉遣いなどは利用制限や退会処分となることがあります。
        .form
          -# '　　'で位置調整しています
          %input.form__submit{type: 'submit', value: '　　コメントする'}
          = icon('fas', 'comment')
    .links
      .front-back
        = link_to '< 前の商品', '#'
      .front-back
        = link_to '後ろの商品 >', '#'
    .mottoLook
      .mottoLook__link
        = @product.category.name
        = link_to 'をもっと見る', '#'
      .mottoLook2
        - @products.each do |product|
          - if product.shipping_status.present?
            = link_to product_path(product) do
              .mottoSold
                .mottoSold__in
                  SOLD
              .img-link
                = image_tag product.images[0].image.url
              .productList
                .name
                  = product.pname
                .center
                  .price
                    = product.price
                  .ster
                    = icon('fas', 'star')
                    0
                .tax (税込)
          - else
            = link_to product_path(product) do
              .img-link
                = image_tag product.images[0].image.url
              .productList
                .name
                  = product.pname
                .center
                  .price
                    = product.price
                  .ster
                    = icon('fas', 'star')
                    0
                .tax (税込)

.post__footer
  = render partial: 'layouts/footer'